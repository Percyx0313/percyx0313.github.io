---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
  <main class="container mx-auto px-4 py-16">
    <article class="prose prose-lg prose-invert max-w-4xl mx-auto text-gray-300">
      <div class="article-content">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style>
  .article-content :global(h1) {
    font-size: 2.25rem !important; /* text-4xl */
    font-weight: bold !important;
    color: white !important;
    margin-top: 2rem !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.2 !important;
  }
  
  .article-content :global(h2) {
    font-size: 1.875rem !important; /* text-3xl */
    font-weight: bold !important;
    color: white !important;
    margin-top: 2rem !important;
    margin-bottom: 1rem !important;
    padding-bottom: 0.5rem !important;
    border-bottom: 1px solid #374151 !important; /* gray-700 */
    line-height: 1.3 !important;
  }
  
  .article-content :global(h3) {
    font-size: 1.5rem !important; /* text-2xl */
    font-weight: bold !important;
    color: white !important;
    margin-top: 1.5rem !important;
    margin-bottom: 0.75rem !important;
    line-height: 1.4 !important;
  }
  
  .article-content :global(h4) {
    font-size: 1.25rem !important; /* text-xl */
    font-weight: bold !important;
    color: white !important;
    margin-top: 1rem !important;
    margin-bottom: 0.5rem !important;
    line-height: 1.5 !important;
  }
  
  .article-content :global(p) {
    color: #d1d5db !important; /* gray-300 */
    line-height: 1.75 !important;
    margin-bottom: 1rem !important;
  }
  
  .article-content :global(strong) {
    color: white !important;
    font-weight: 600 !important;
  }
  
  .article-content :global(em) {
    color: #9ca3af !important; /* gray-400 */
    font-style: italic !important;
  }
  
  .article-content :global(a) {
    color: #60a5fa !important; /* blue-400 */
    text-decoration: none !important;
  }
  
  .article-content :global(a:hover) {
    color: #93c5fd !important; /* blue-300 */
    text-decoration: underline !important;
  }
  
  .article-content :global(ul), 
  .article-content :global(ol) {
    color: #d1d5db !important; /* gray-300 */
    margin-bottom: 1rem !important;
  }
  
  .article-content :global(li) {
    color: #d1d5db !important; /* gray-300 */
    margin-bottom: 0.25rem !important;
  }
  
  .article-content :global(blockquote) {
    border-left: 4px solid #3b82f6 !important; /* blue-500 */
    background-color: rgba(31, 41, 55, 0.3) !important; /* gray-800/30 */
    padding: 1rem !important;
    margin: 1.5rem 0 !important;
    color: #d1d5db !important;
  }
  
  .article-content :global(code) {
    background-color: #1f2937 !important; /* gray-800 */
    color: #4ade80 !important; /* green-400 */
    padding: 0.125rem 0.25rem !important;
    border-radius: 0.25rem !important;
    font-size: 0.875rem !important;
  }
  
  .article-content :global(pre) {
    background-color: #111827 !important; /* gray-900 */
    border: 1px solid #374151 !important; /* gray-700 */
    padding: 1rem !important;
    border-radius: 0.5rem !important;
    margin: 1rem 0 !important;
    overflow-x: auto !important;
  }
  
  .article-content :global(hr) {
    border-color: #374151 !important; /* gray-700 */
    margin: 2rem 0 !important;
  }
  
  .article-content :global(img) {
    border-radius: 0.5rem !important;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
    margin: 1.5rem auto !important;
    display: block !important;
  }
</style> 